@model Ontrack.ViewModels.ClassExaminationViewModel

@{
    ViewData["Title"] = "Exam Results";
}
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Result</a>
</p>
<h2>Exam Results</h2>

<form method="get">
    <div>
        <label for="ExamID">Select Exam:</label>
        <select id="ExamID" name="selectedExamID" asp-for="SelectedExamID" asp-items="Model.Exams"></select>
    </div>
    <button type="submit">Filter</button>
</form>

@if (Model.SelectedExamID > 0)
{
    <h3>Results for Exam: @Model.ExamName on @Model.ExamDate.ToShortDateString()</h3>
    <p>Class: @Model.ClassName</p>

    <table>
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Score</th>
                <!-- Other columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.StudentName</td>
                    <td>@student.Score</td>
                    <!-- Other columns as needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Please select an exam to see results.</p>
}
