@model IEnumerable<Ontrack.Models.Parent>

@{
    ViewData["Title"] = "Parents";
    var currentFilter = ViewData["CurrentFilter"] as string;
    var selectedParentID = ViewData["SelectedParentID"] as int?;
    var childrenList = ViewData["ChildrenList"] as IEnumerable<Ontrack.Models.Student>;
}

<h1>Parents</h1>

@using (Html.BeginForm("LoadChildren", "Parents", FormMethod.Get))
{
    <div class="form-group">
        <label for="searchString">Search:</label>
        <input type="text" class="form-control" id="searchString" name="searchString" value="@currentFilter" />
        <button type="submit" class="btn m-1 btn-primary">Search</button>
    </div>
}

<p>
    <a asp-action="Create" class="btn m-1 btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var parent in Model)
        {
            <tr>
                <td>@parent.FirstName @parent.LastName</td>
                <td>@parent.PhoneNumber</td>
                <td>@parent.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@parent.ParentID" class="btn btn-info">Edit</a> |
                    <a asp-action="Details" asp-route-id="@parent.ParentID" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@parent.ParentID" class="btn btn-info">Delete</a> |

                    <!-- Show Children Button -->
                    <form method="post" asp-action="LoadChildren" style="display:inline;">
                        <input type="hidden" name="ParentID" value="@parent.ParentID" />
                        <button type="submit" class="btn btn-info">Show Children</button>
                    </form>
                </td>
            </tr>

            @if (selectedParentID != null && selectedParentID == parent.ParentID)
            {
                <!-- Display children if the parent is selected -->
                <tr>
                    <td colspan="4">
                        <h4>Children of @parent.FirstName @parent.LastName</h4>
                        @if (childrenList != null && childrenList.Any())
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Date of Birth</th>
                                        <th>Class</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in childrenList)
                                    {
                                        <tr>
                                            <td>@student.FirstName</td>
                                            <td>@student.LastName</td>
                                            <td>@student.DOB.ToString("yyyy-MM-dd")</td>
                                            <td>@student.Class.ClassName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No children found.</p>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
