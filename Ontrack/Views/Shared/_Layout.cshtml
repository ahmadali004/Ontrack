<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Ontrack</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Ontrack.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/images/logo - small.jpg" alt="Ontrack Logo" style="height: 50px;" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@if (User.IsInRole("Admin"))
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Students" asp-action="Index">Students</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Parents" asp-action="Index">Parents</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Teachers" asp-action="Index">Teachers</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Subjects" asp-action="Index">Subjects</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Classes" asp-action="Index">Classes</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Examinations" asp-action="ChooseExamAction">Add Exams</a>
							</li>
						
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Payments" asp-action="Index">Payments</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Payments1" asp-action="Index">Transactions</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Expenses" asp-action="Index">Expenses</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Attendances" asp-action="Index">Attendance</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Attendances" asp-action="ViewAttendance">View Attendance</a>
						</li>}
						@if (User.IsInRole("Teacher"))
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Classes" asp-action="Index">Classes</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Examinations" asp-action="Index">Add Exams</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="StudentExamsResults" asp-action="Index">Exam Results</a>
							</li>}
							@if (User.IsInRole("Parent"))
						{
							
							
								<li class="nav-item">
									<a class="nav-link text-dark" asp-controller="StudentExamsResults" asp-action="Index">Exam Results</a>
								</li>
						}

					</ul>
					<ul class="navbar-nav">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Hello, @User.Identity.Name!</a>
							</li>
							<li class="nav-item">
								<form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm" class="d-inline">
									<button type="submit" class="btn btn-link nav-link text-dark" style="padding: 0;">Logout</button>
								</form>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - Ontrack - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
