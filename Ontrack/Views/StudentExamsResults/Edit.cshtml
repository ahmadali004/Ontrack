@model Ontrack.Models.StudentExamsResult

@{
    ViewData["Title"] = "Edit Student Exam Result";
}

<h1>Edit Student Exam Result</h1>

<h4>Student Exam Result</h4>
<hr />
<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Score" class="control-label"></label>
        <input asp-for="Score" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentID" class="control-label"></label>
        <select asp-for="StudentID" class="form-control" asp-items="@((IEnumerable<SelectListItem>)ViewData["StudentID"])"></select>
        <span asp-validation-for="StudentID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExaminationID" class="control-label"></label>
        <select asp-for="ExaminationID" class="form-control" asp-items="@((IEnumerable<SelectListItem>)ViewData["ExaminationID"])"></select>
        <span asp-validation-for="ExaminationID" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="StudentExamResultID" />

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
