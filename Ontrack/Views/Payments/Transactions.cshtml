@model IEnumerable<Ontrack.ViewModels.TransactionViewModel>

@{
    ViewData["Title"] = "Payment Transactions";
}

<h2>Payment Transactions</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Parent Name</th>
                <th>Student Name</th>
                <th>Amount</th>
                <th>Payment Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.PaymentID</td>
                    <td>@transaction.ParentName</td>
                    <td>@transaction.StudentName</td>
                    <td>@transaction.Amount</td>
                    <td>@transaction.PaymentDate.ToString("yyyy-MM-dd")</td>
                    <td>@transaction.PaymentStatus</td>
                    <td>
                        <a asp-controller="Payments" asp-action="Details" asp-route-id="@transaction.PaymentID" class="btn btn-info">Details</a>
                        <a asp-controller="Payments" asp-action="Edit" asp-route-id="@transaction.PaymentID" class="btn btn-info">Edit</a>
                        <a asp-controller="Payments" asp-action="Delete" asp-route-id="@transaction.PaymentID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this transaction?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No transactions found.</p>
}
