@model IEnumerable<Ontrack.ViewModels.ParentWithStudentsViewModel>

@{
    ViewData["Title"] = "Parents and Students";
}

<h2>Parents and Their Students</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Parent Name</th>
            <th>Students</th>
            <th>Total Tuition</th>
            <th>All Paid</th>
            <th>Individual Payment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var parentWithStudents in Model)
        {
            <tr>
                <td>@parentWithStudents.Parent.FullName</td>
                <td>
                    @foreach (var student in parentWithStudents.Students)
                    {
                        <div>@student.FullName</div>
                    }
                </td>
                <td>@parentWithStudents.GetTuitionAmount().ToString("C")</td>
                <td>
                    <button class="btn @(parentWithStudents.AllChildrenPaid() ? "btn-success" : "btn-danger")">
                        @(parentWithStudents.AllChildrenPaid() ? "All Paid" : "Not All Paid")
                    </button>
                </td>
                <td>
                    @foreach (var student in parentWithStudents.Students)
                    {
                        <button class="btn @(student.Payments.Any(payment => payment.IsPaid) ? "btn-success" : "btn-danger")">
                            @(student.Payments.Any(payment => payment.IsPaid) ? "Paid" : "Not Paid")
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
