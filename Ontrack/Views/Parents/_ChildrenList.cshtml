@model IEnumerable<Ontrack.Models.Student>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Class Name</th>
                <th>Parent Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.DOB.ToString("yyyy-MM-dd")</td>
                    <td>@student.Class.ClassName</td>
                    <td>@student.Parent.FirstName @student.Parent.LastName</td>
                    <td>
                        
                        <a asp-controller="Students" asp-action="Details" asp-route-id="@student.StudentID" class="btn btn-info">Details</a>

                       
                        <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-info">Edit</a>

                       
                        <a asp-controller="Students" asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-info">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No children found.</p>
}
