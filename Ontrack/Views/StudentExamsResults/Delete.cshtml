@model Ontrack.Models.StudentExamsResult

@{
    ViewData["Title"] = "Delete Student Exam Result";
}

<h1>Delete Student Exam Result</h1>

<h4>Are you sure you want to delete this?</h4>
<hr />
<div>
    <h4>Student Exam Result</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Score</dt>
        <dd class="col-sm-10">@Model.Score</dd>
        <dt class="col-sm-2">Student</dt>
        <dd class="col-sm-10">@Model.Student.FullName</dd>
        <dt class="col-sm-2">Examination</dt>
        <dd class="col-sm-10">@Model.Examination.ExamName</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="StudentExamResultID" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
